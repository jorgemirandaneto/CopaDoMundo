@model CopaDoMundo.Models.Selecao

<br />
<fieldset class="form-group">
    <legend>Você tem certeza que deseja remover a seleção?</legend>
    <div class="display-field">
        <h2><b>País:  @Html.DisplayFor(model => model.Pais)</b></h2>
    </div>
    <div class="display-field">
        <h2><b>Técnico: @Html.DisplayFor(model => model.Tecnico)</b></h2>
    </div>
</fieldset>
<br />
@using (Html.BeginForm())
{
    <p>
        <a href="@Url.Action("Delete","Selecao")">
            <input type="submit" value="Deletar" class="btn btn-group-sm" />
        </a>
    </p>
    <p>
        @Html.ActionLink("Listagem de seleções", "Index")
    </p>
}